<!-- assets/icon.svg - Convert this to PNG at 512x512 -->
<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d2d;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bulbGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#81D4FA;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4FC3F7;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="512" height="512" rx="120" fill="url(#bgGradient)"/>
  
  <!-- Light rays -->
  <g stroke="#4FC3F7" stroke-width="16" stroke-linecap="round" opacity="0.8">
    <line x1="256" y1="80" x2="256" y2="120"/>
    <line x1="376" y1="136" x2="350" y2="162"/>
    <line x1="432" y1="256" x2="392" y2="256"/>
    <line x1="376" y1="376" x2="350" y2="350"/>
    <line x1="256" y1="432" x2="256" y2="392"/>
    <line x1="136" y1="376" x2="162" y2="350"/>
    <line x1="80" y1="256" x2="120" y2="256"/>
    <line x1="136" y1="136" x2="162" y2="162"/>
  </g>
  
  <!-- Light bulb -->
  <circle cx="256" cy="256" r="100" fill="url(#bulbGradient)" stroke="#4FC3F7" stroke-width="12"/>
  
  <!-- Bulb base -->
  <rect x="216" y="336" width="80" height="40" rx="16" fill="#4FC3F7"/>
  <rect x="220" y="384" width="72" height="12" rx="6" fill="#4FC3F7"/>
</svg>